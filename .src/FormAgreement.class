Public Sub Form_Open()
   
  modestru.flags.lenguaje = Left$(System.Language, 2)  ' con esto accedo al folder correcto de la ayuda
  
  txtTerms.Text = File.load("/usr/share/estru3d/hlp" &/ modestru.flags.lenguaje &/ "terms.txt")
  
  Debug Application.Dir
  Debug user.home &/ ".estru3d"
  Debug Application.Name
  
  
  lines = txtTerms.line
  
  txtTerms.Line = 0
  
  txtTerms.ReadOnly = True
  
 
  
  Catch
      
      
      Message(("No puedo encontrar") & "/usr/share/estru3d/hlp" &/ modestru.flags.lenguaje &/ "terms.txt" & gb.crlf & ("Programa mal instalado. Reinstalar"))
      
      Me.Close
      
   
    
End

